#!/bin/sh
#	$Id: maketoc,v 1.1 2000-04-25 23:22:43 steve Exp $
#	maketoc file...
#
#	Use the toc.ts tagset to add or update a table of contents in an
#	HTML or XML document or set of documents. 
#
for f in $*; do
  if [ -f $f.bak ]; then
     if [ -f $f.orig ]; then
        rm $f.bak
     else 
        mv $f.bak $f.orig
     fi
  fi
  mv $f $f.bak
  process -t toc $f.bak > $f
done
