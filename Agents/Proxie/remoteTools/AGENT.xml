<AGENT name='remoteTools' path='/Proxie/Toolbar/'
       type='/Proxie/Toolbar' home-dir='Proxie/remoteTools'
       pathName='/Proxie/Toolbar/remoteTools'>
  <bind name='criteria'>response agent-response- html</bind>
  <bind name='onStart'>on</bind>
  <bind name='act-on'><!--   this is remoteTools' act-on hook   -->
<if>&AGENT:hidden;<else>
<trans-control>
<set entity='entity' name='pia'>http://&piaHOST;:&piaPORT;</set>
<a href='&pia;/' target='_top'><img src='&pia;/Icon/pent24.gif' height='24' width='24' border='0' /></a>
<expand>&AGENTS:Toolbar:controls;</expand>
<expand><get name='AGENTS:History:controls' /></expand>
<!--   making this a link is actually useful: it gets you out of a frame.   -->
<a href='&url;' target='_top'>&lt;URL:&url;&gt;</a>
<hr />
</trans-control></else></if>
<user-message>&url;</user-message>
</bind>
</AGENT>
